nav.navbar(role="navigation" aria-label="main navigation")
  .navbar-brand
    a.navbar-item(href='/') {{config.brand}}
    a.navbar-burger(role='button' aria-label="menu" aria-expanded="false" data-target="navbarBasic")
      span(aria-hidden="true")
      span(aria-hidden="true")
      span(aria-hidden="true")

  .navbar-menu#navbarBasic
    .navbar-start
      {% for navitem in nav %}
      {% if navitem.children %}
      .navbar-item.has-dropdown.is-hoverable
        a.navbar-link=navitem.title
        .navbar-dropdown
          {% for entry in navitem.children %}
          a.navbar-item(href='{{entry.url | url}}')=entry.title
          {% endfor %}
      {% else %}
      a(href='{{navitem.url | url}}').navbar-item=navitem.title
      {% endif %}
      {% endfor %}
