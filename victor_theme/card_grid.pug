{% extends "main.html" %}

{% block content %}
{{page.content}}

{% for grid in page.meta.grids %}
{% set grid_data = grid.data_file|load_data(grid.filters) %}
.div.is-size-3=grid.name
br
.columns.is-multiline
  {% for item in grid_data %}
  {% with ignore_keys=grid.ignore_keys, show_key=grid.show_key %}
  {% include grid.card_template|default("card.html", true) %}
  {% endwith %}
  {% endfor %}
{% endfor %}

{% endblock %}
